pipeline{
    agent any
    
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'Main',url: 'https://github.com/octobit8-pvt-ltd/travelyaari.git'
            }
        }
        
        
        
        stage('Build') {
            steps {
                node('any'){
                    bat 'npm run build'
            
            }
                }
        }
        
        stage("SonarQube analysis"){
            agent any
            steps{
                node('any'){
                    withSonarQubeEnv('SonarQube') {
                        bat '''
                        
                        -Dsonar.projectKey=Travel2 \
                        -Dsonar.projectname='Travel2' \
                        -Dsonar.host.url=http://localhost:9099 \
                        -Dsonar.login= sqp_15601de938a274e86b8f03699c8abc9da65cda12
                        '''
                    
               }
               }
                }
        }
        stage("Quality Gate"){
            steps{
                timeout(time:15,unit:TimeUnit.MINUTES)
                waitforqualitygate abortpipeline:true
            }
        }
    }
}
